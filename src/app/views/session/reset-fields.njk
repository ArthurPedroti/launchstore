<div class="item">
  <div>Email</div>
  <div class="input">
    <input type="email" name="email" placeholder="Digite seu email" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')">
  </div>
</div>
<div class="item">
  <div>Senha</div>
  <div class="input">
    <input type="password" name="password" placeholder="Digite sua senha para atualizar seu cadastro">
  </div>
</div>
<div class="item">
  <div>Repetir Senha</div>
  <div class="input">
    <input type="password" name="passwordRepeat" placeholder="Repita a senha escolhida">
  </div>
</div>

<input type="hidden" name="token" value="{{token}}">